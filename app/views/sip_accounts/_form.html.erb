<%= simple_form_for @sip_account do |f| %>
	<%= f.input :name %>  

	<% if @sip_account.phone_id.blank? %>
	  <%= f.association :phone %>  
	<% else %>
	  <%= f.hidden_field :phone_id %>
	<% end %>

	<%= f.input :user %>  
	<%= f.input :auth_user %>  
	<%= f.input :password %>  
	<%= f.input :registrar %>  
	<%= f.input :registrar_port %>  
	<%= f.input :outbound_proxy %>  
	<%= f.input :outbound_proxy_port %>  
	<%= f.input :sip_proxy %>  
	<%= f.input :sip_proxy_port %>  
	<%= f.input :realm %>  
	<%= f.input :screen_name %>  
	<%= f.input :display_name %>  
	<%= f.input :registration_expiry_time %>  
	<%= f.select :dtmf_mode, [ 'rfc2833', 'inband', 'info' ], :prompt => "DTMF Mode" %>  
	<%= f.input :remote_password %>  
	<%= f.association :codecs, :as => :check_boxes %>

	<%= f.button :submit %>  
<% end %>
