    <formalpara>
      <title>Verknüpfungen</title>

      <para><itemizedlist>
          <listitem>
            <para><methodname>has_many</methodname> <xref
            linkend="model-phone-model" /></para>
          </listitem>

          <listitem>
            <para><methodname>has_many</methodname> <xref
            linkend="model-oui" /></para>
          </listitem>
