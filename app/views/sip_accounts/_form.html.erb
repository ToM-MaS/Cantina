<%= simple_form_for @sip_account do |f| %>
  <% if @sip_account.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@sip_account.errors.count, "error") %> prohibited this sip_account from being saved:</h2>

      <ul>
      <% @sip_account.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
	
	<%= f.input :name %>  

	<% if @sip_account.phone_id.blank? %>
	  <%= f.association :phone,  :label_method => :mac_address %>  
	<% else %>
	  <%= f.hidden_field :phone_id %>
	<% end %>

	<%= f.input :user %>  
	<%= f.input :auth_user %>  
	<%= f.input :password %>  
	<%= f.input :registrar %>  
	<%= f.input :registrar_port %>  
	<%= f.input :outbound_proxy %>  
	<%= f.input :outbound_proxy_port %>  
	<%= f.input :sip_proxy %>  
	<%= f.input :sip_proxy_port %>  
	<%= f.input :realm %>  
	<%= f.input :screen_name %>  
	<%= f.input :display_name %>  
	<%= f.input :registration_expiry_time %>  
	<%= f.select :dtmf_mode, [ 'rfc2833', 'inband', 'info' ], :prompt => "DTMF Mode" %>  
	<%= f.input :remote_password %>  
	<%= f.association :codecs, :as => :check_boxes %>

	<%= f.button :submit %>  
<% end %>
